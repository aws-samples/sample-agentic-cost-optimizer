{
  "name": "infra",
  "private": true,
  "scripts": {
    "prebuild": "npm run package-agent",
    "build": "tsc -p tsconfig.json",
    "watch": "tsc -w",
    "clean": "rm -rf cdk.out dist ../build-agents",
    "presynth": "npm run build",
    "synth": "cdk synth",
    "cdk": "cdk",
    "predeploy": "npm run build",
    "deploy": "cdk deploy --require-approval never",
    "destroy": "cdk destroy",
    "prettier": "prettier . --write",
    "pretest": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "package-agent": "bash ../scripts/build-deployment-package.sh"
  },
  "dependencies": {
    "@aws-cdk/aws-bedrock-agentcore-alpha": "^2.229.0-alpha.0",
    "@mrgrain/cdk-esbuild": "^5.7.4",
    "aws-cdk-lib": "^2.230.0",
    "constructs": "10.4.3",
    "esbuild": "^0.27.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/node": "^24.10.1",
    "aws-cdk": "^2.1033.0",
    "cdk-nag": "^2.28.195",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "vitest": "^4.0.14"
  }
}
