{
  "name": "infra",
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "watch": "tsc -w",
    "clean": "rm -rf cdk.out",
    "prepare-lambda": "rm -rf dist/build-lambda && rsync -a --exclude='__pycache__' --exclude='*.pyc' ../infra/lambda/ ../src/__init__.py ../src/shared dist/build-lambda/",
    "synth": "npm run prepare-lambda && cdk synth",
    "cdk": "cdk",
    "deploy": "npm run prepare-lambda && cdk deploy --require-approval never",
    "destroy": "cdk destroy",
    "prettier": "prettier . --write",
    "test": "npm run prepare-lambda && vitest run",
    "test:watch": "npm run prepare-lambda && vitest"
  },
  "dependencies": {
    "@aws-cdk/aws-bedrock-agentcore-alpha": "^2.221.0-alpha.0",
    "@mrgrain/cdk-esbuild": "^5.7.4",
    "aws-cdk-lib": "^2.224.0",
    "constructs": "10.4.3",
    "esbuild": "^0.27.0"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/node": "^24.10.1",
    "aws-cdk": "^2.1031.2",
    "cdk-nag": "^2.28.195",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "vitest": "^4.0.9"
  }
}
