    "@aws-sdk/client-bedrock-agentcore": "^3.925.0",
    "@mrgrain/cdk-esbuild": "^5.7.1",
    "aws-cdk-lib": "^2.156.0",
    "constructs": "10.3.0",
    "esbuild": "^0.25.10"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/aws-lambda": "^8.10.156",
    "@types/node": "^22.7.9",
    "aws-cdk": "^2.156.0",
    "aws-sdk-client-mock": "^4.1.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "vitest": "^4.0.1"
